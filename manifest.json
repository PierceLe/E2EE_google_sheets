{
  "manifest_version": 3,
  "name": "Sheets Encrypt POC",
  "version": "0.1",
  "description": "POC: encrypt cell content (base64) on Enter/blur before Google Sheets saves it.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://docs.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/spreadsheets/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["*://docs.google.com/*"]
    }
  ]
}
